package com.app.pen;

import java.time.LocalDate;

public class Pen {
	
	private static int id;
	private Brand brandName;
	private String colorName;
	private String inkColor;
	private Material material;
	private int avilableQuentity;
	private LocalDate updateDate;
	private LocalDate stockListingDate;
	private Float price;
	private float discount;

	// Parameterized constructor
	public Pen(int id,Brand brandName, String colorName, String inkColor, Material material, int avilableQuentity,
			LocalDate updateDate, LocalDate stockListingDate, Float price) {
		super();
		this.brandName = brandName;
		this.colorName = colorName;
		this.inkColor = inkColor;
		this.material = material;
		this.avilableQuentity = avilableQuentity;
		this.updateDate = updateDate;
		this.stockListingDate = stockListingDate;
		this.price = price;
		this.discount=0;
		this.id=id++;
	}
	public Pen(int id2) {
		
	}
	public Pen(int id2) {
		// TODO Auto-generated constructor stub
	}
	public void setAvilableQuentity(int avilableQuentity) {
		this.avilableQuentity = avilableQuentity;
	}
	public static int getId() {
		return id;
	}
	public Brand getBrandName() {
		return brandName;
	}
	public String getColorName() {
		return colorName;
	}
	public String getInkColor() {
		return inkColor;
	}
	public Material getMaterial() {
		return material;
	}
	public int getAvilableQuentity() {
		return avilableQuentity;
	}
	public LocalDate getUpdateDate() {
		return updateDate;
	}
	public LocalDate getStockListingDate() {
		return stockListingDate;
	}
	public Float getPrice() {
		return price;
	}
	public float getDiscount() {
		return discount;
	}
	
	
	
	public void setDiscount(float discount) {
		this.discount = discount;
	}
	@Override
	public String toString() {
		return "Pen [brandName=" + brandName + ", colorName=" + colorName + ", inkColor=" + inkColor + ", material="
				+ material + ", avilableQuentity=" + avilableQuentity + ", updateDate=" + updateDate
				+ ", stockListingDate=" + stockListingDate + ", price=" + price + ", discount=" + discount + "]";
	}
	
	
	
	
	
	
	
	
	
	

}
